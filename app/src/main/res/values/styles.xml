<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <declare-styleable name="ColumnLayout">
        <attr name="childLayout" format="reference" />
        <attr name="column" format="integer" />
        <attr name="rowDivider" format="reference|color" />
        <attr name="rowDividerHeight" format="dimension" />
        <attr name="childDivider" format="reference|color" />
        <attr name="childDividerWidth" format="dimension" />
        <attr name="childPadding" format="dimension" />
        <attr name="childPaddingTop" format="dimension" />
        <attr name="childPaddingBottom" format="dimension" />
        <attr name="autoHeight" format="boolean" />
        <attr name="showFinalBottomLine" format="boolean"/>
    </declare-styleable>

</resources>
